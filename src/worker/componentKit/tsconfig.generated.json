{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "types": ["react", "node"],
    "baseUrl": ".",
    "paths": {}
  },
  "include": ["./sandbox/**/*.ts", "./sandbox/**/*.tsx"],
  "exclude": ["node_modules"]
}

